<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="wifiCrack.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">

            <Button 
                x:Name="ScanButton"
                Text="Scanner les réseaux Wi-Fi"
                Clicked="OnScanClicked"
                HorizontalOptions="Center"/>

            <ActivityIndicator
                x:Name="LoadingIndicator"
                IsVisible="False"
                Color="{StaticResource PrimaryColor}"/>

            <ListView x:Name="NetworkList" ItemSelected="OnNetworkSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <VerticalStackLayout Padding="10">
                                <Label Text="{Binding Ssid}" 
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding SecurityType}"/>
                                <Label Text="{Binding SignalStrength}"/>
                            </VerticalStackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </VerticalStackLayout>
    </ScrollView>


</ContentPage>
